<%= render "components/cocktail_banner" %>
<div class="container">

  <div class="row margin-bottom">
    <!-- list doses -->
    <div class="col-sm-12 col-md-6">
      <h2>Ingredients:</h2>
      <% if @cocktail.doses.exists? %>
        <% @cocktail.doses.each do |d| %>
          <p><%= d.description %> | <%= d.ingredient.name %>  <%= link_to "🗑️", dose_path(d), method: :delete, data: {confirm: "Are you sure?" } %></p>
        <% end %>
      <% else %>
        <p><%= "There are no ingredients yet!" %></p>
      <% end %>
    </div>

    <!-- add doses form -->
    <div class="col-sm-12 col-md-6">
      <h2>Add new ingredients:</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, label: "Amount" %>
        <%= f.association :ingredient %>
        <%= f.button :submit, "Add ingredient", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>
